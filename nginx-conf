upstream apiServer {
  server localhost:3000;
}

upstream appServer {
  server localhost:4000;
}

upstream adminServer {
  server localhost:5000;
}

server {
  listen 80;
  server_name pythia-dev.site www.pythia-dev.site;

  root /home/app/pythia-kore/;

  access_log /var/log/nginx/pythia-kore.access.log;
  error_log /var/log/nginx/pythia-kore.error.log;

  try_files $uri @appServer;
  client_max_body_size 0;

  location /api {
    client_max_body_size 0;
    proxy_pass http://apiServer;
    proxy_redirect off;
    proxy_read_timeout 15m;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For
    $proxy_add_x_forwarded_for;
  }

  location /admin {
    client_max_body_size 0;
    proxy_pass http://adminServer;
    proxy_redirect off;
    proxy_read_timeout 15m;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For
    $proxy_add_x_forwarded_for;
  }

  location @appServer {
    client_max_body_size 0;
    proxy_pass http://appServer;
    proxy_redirect off;
    proxy_read_timeout 15m;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For
    $proxy_add_x_forwarded_for;
  }

  listen 443 ssl; # managed by Certbot
  ssl_certificate /etc/letsencrypt/live/www.pythia-dev.site/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/www.pythia-dev.site/privkey.pem; # managed by Certbot
  include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

  if ($scheme != "https") {
      return 301 https://$host$request_uri;
  } # managed by Certbot

  # Redirect non-https traffic to https
  # if ($scheme != "https") {
  #     return 301 https://$host$request_uri;
  # } # managed by Certbot
}

server {
  listen 80;
  server_name barcel.pythia-dev.site globo.pythia-dev.site common.pythia-dev.site latte.pythia-dev.site leco.pythia-dev.site;

